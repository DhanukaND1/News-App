<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/login_icon"
        android:src="@drawable/news_app_launcher"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="101dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/login_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="TechBuzz"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_icon" />

    <EditText
        android:id="@+id/username_input"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:fontFamily="@font/inter_regular"
        android:textSize="15sp"
        android:hint="Enter username"
        android:inputType="text"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:layout_marginTop="71dp"
        android:background="@drawable/edittext_border"
        android:drawableLeft="@drawable/person_icon"
        android:drawablePadding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_appname" />

    <EditText
        android:id="@+id/password_input"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:fontFamily="@font/inter_regular"
        android:textSize="15sp"
        android:hint="Enter Password"
        android:layout_marginTop="24dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:drawableLeft="@drawable/lock_icon"
        android:drawablePadding="16dp"
        android:background="@drawable/edittext_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_input"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:text="Login"
        android:fontFamily="@font/inter_medium"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#01579B"
        android:paddingTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_input" />

    <TextView
        android:id="@+id/signup_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_semibold"
        android:textIsSelectable="false"
        android:text="Donâ€™t have an account? Sign up"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/login_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/terms_and_policy"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="@font/inter_regular"
        android:textAlignment="center"
        android:textColor="#828282"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_prompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>